{
    "compilerOptions": {
        "composite": true,
        "jsx": "preserve",
        "lib": [
            "ES2018",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": true
    },
    "include": [
        "packages"
    ],
    "exclude": [
        "node_modules",
        "**/dist",
        "**/__tests__/**/*",
        "**/gulpfile.ts",
        "**/test-helper",
        "packages/test-utils",
        "**/*.md"
    ],
}