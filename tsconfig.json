{
    "compilerOptions": {
        "composite": true,
        "jsx": "preserve",
        "lib": [
            "ES2018",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "isolatedModules": true,
        "isolatedDeclarations": false,
        "resolveJsonModule": true,
        "moduleResolution": "node10",
        "target": "ESNext",
        "types": ["node"]
    },
    "include": [
        "packages",
        "docs/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/dist",
        "**/__tests__/**/*",
        "**/gulpfile.ts",
        "**/test-helper",
        "packages/test-utils",
        "**/*.md"
    ]
}